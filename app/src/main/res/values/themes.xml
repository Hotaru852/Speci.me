<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Specime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- 1) Your custom dialog theme -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Applies your date picker style -->
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>

        <!-- Applies the custom styles to the positive/negative buttons -->
        <item name="android:buttonBarPositiveButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyDialogButtonStyle</item>
    </style>

    <!-- 2) The date picker style (unchanged) -->
    <style name="CustomDatePicker">
        <item name="android:headerBackground">#476800</item>
        <item name="android:background">#F8FBE8</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:colorAccent">#476800</item>
    </style>

    <!-- 3) A custom button style for the OK/CANCEL buttons -->
    <style name="MyDialogButtonStyle" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <!-- Set the text color of the button -->
        <item name="android:textColor">#476800</item>
        <!-- Optionally tint the background or text (depends on parent) -->
        <item name="android:backgroundTint">#476800</item>
    </style>

</resources>